	"main": "dist/index.js",
	"scripts": {
		"clean": "rimraf dist/*",
		"dev:start": "npm-run-all build start",
		"dev": "env-cmd -f ./config/dev.env nodemon --watch src -e js,ts,ejs --exec npm run dev:start",
		"start": "node dist/index.js",
		"tsc": "tsc",
		"build": "npm-run-all clean tsc",
		"test": "jest --watchAll",
		"lint": "eslint .",
		"prettier": "prettier --ignore-path .gitignore \"**/*.+(js|json)\"",
		"format": "npm run prettier -- --write",
		"check-format": "npm run prettier -- --list-different",
		"validate": "npm run check-format && npm run lint"
	},
	"author": "",
	"license": "ISC",
	"dependencies": {
		"bad-words": "^3.0.0",
		"express": "^4.16.4",
		"mongoose": "5.9.16",
		"socket.io": "^2.2.0",
		"uuid": "8.0.0"
	},
	"devDependencies": {
		"@types/express": "4.17.7",
		"@types/jest": "26.0.4",
		"@types/mongoose": "5.7.32",
		"@types/node": "14.0.23",
		"@types/socket.io": "2.1.8",
		"env-cmd": "10.1.0",
		"eslint": "7.0.0",
		"eslint-plugin-prettier": "3.1.3",
		"husky": "4.2.5",
		"jest": "25.5.3",
		"lint-staged": "10.2.4",
		"nodemon": "^1.18.7",
		"npm-run-all": "4.1.5",
		"prettier": "2.0.5",
		"rimraf": "3.0.2",
		"ts-jest": "26.1.2",
		"typescript": "3.9.6"
	}
